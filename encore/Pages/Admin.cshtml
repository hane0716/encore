@page
@model encore.Pages.AdminModel
@{
    Layout = "_Layout";
}
<title>@Model.Title</title>

<h1>バンド名登録</h1>

<form method="post" asp-page-handler="Insert_band">
    <label>バンド名：</label>
    <input asp-for="BandName" required />
    <button type="submit">バンド名を登録</button>
</form>

<form method="post" asp-page-handler="Delete_band">
    <label>削除したいバンド名：</label>
    <input asp-for="DelBandName" required />
    <button type="submit">バンド名を削除</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}

@if (Model.BandList != null && Model.BandList.Rows.Count > 0)
{
    <table border="1">
        <tr>
            <th>バンド名</th>
        </tr>
        @foreach (System.Data.DataRow row in Model.BandList.Rows)
        {
            <tr>
                <td>@row["band_name"]</td>
            </tr>
        }
    </table>
}
else
{
    <p>バンド情報はまだ登録されていません。</p>
}
