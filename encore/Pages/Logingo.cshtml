@page
@model encore.Pages.LogingoModel
@{
    Layout = "_Layout";
}
<title>@Model.Title</title>

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        max-width: 600px;
        margin: 60px auto;
        padding: 40px;
        background-color: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.5);
        text-align: center;
    }

    .card h1 {
        color: #ffffff;
        font-size: 2em;
        margin-bottom: 20px;
    }

    .card p {
        font-size: 1.1em;
        color: #cccccc;
        margin-bottom: 30px;
    }

    .card a {
        display: inline-block;
        margin: 10px;
        padding: 12px 24px;
        background-color: #3949ab; /* 落ち着いたブルー */
        color: #ffffff;
        text-decoration: none;
        border-radius: 6px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .card a:hover {
        background-color: #303f9f; /* 少し濃いブルーでホバー効果 */
    }

</style>

<div class="card">
    <form method="post" asp-page-handler="Logout">
        <button type="submit" style="background-color:#3949ab; margin-left:400px; color:white; border:none; padding:6px 12px; border-radius:4px; cursor:pointer;">
            ログアウト
        </button>
    </form>

    <h1>@Model.WelcomeMessage</h1>
    <p>@Model.InfoMessage</p>

    <a asp-page="/EditProfile">プロフィール編集する</a>
    <a asp-page="/Kiroku">ライブを記録する</a>
</div>
