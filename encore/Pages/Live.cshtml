@page
@model encore.Pages.LiveModel
@{
    ViewData["Title"] = "ライブ記録画面";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ライブ記録</h1>

<form method="post" asp-page-handler="Insert_live" style="display:flex; gap:8px; align-items:center;">
    <label>ライブ名：</label>
    <input asp-for="LiveName" required />
    <input asp-for="LiveDate" type="date" required />
    <button type="submit">ライブ名を登録</button>
</form>

<form method="post" asp-page-handler="Delete_live" style="display:flex; gap:8px; align-items:center; margin-top:10px;">
    <label>削除したいライブ名：</label>
    <input asp-for="DelLiveName" required />
    <button type="submit">ライブ名を削除</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}

@if (Model.LiveList != null && Model.LiveList.Rows.Count > 0)
{
    <table border="1">
        <tr>
            <th>公演日</th>
            <th>公演名</th>
        </tr>
        @foreach (System.Data.DataRow row in Model.LiveList.Rows)
        {
            <tr>
                <td>@Convert.ToDateTime(row["live_date"]).ToString("yyyy-MM-dd")</td>
                <td>@row["live_name"]</td>
            </tr>
        }
    </table>
}
else
{
    <p>ライブ情報はまだ登録されていません。</p>
}
