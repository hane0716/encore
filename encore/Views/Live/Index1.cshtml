@{
    ViewData["Title"] = "ライブ記録画面";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ライブ記録</h1>

<form asp-controller="Live" asp-action="Insert_live" method="post">
    <label>ライブ名：</label>
    <input type="text" name="live_name" required />
    <input type="date" name="live_date" required />
    <button type="submit">ライブ名を登録</button>
</form>

<form asp-action="Delete_live" method="post">
    <label>削除したいライブ名：</label>
    <input type="text" name="del_live_name" required />
    <button type="submit">ライブ名を削除</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}


@if (ViewBag.LiveList != null)
{
    <table border="1">
        <tr>
            <th>公演日</th>
            <th>公演名</th>
        </tr>
        @foreach (System.Data.DataRow row in ViewBag.LiveList.Rows)
        {
            <tr>
                <td>@Convert.ToDateTime(row["live_date"]).ToString("yyyy-MM-dd")</td>
                <td>@row["live_name"]</td>
            </tr>
        }
    </table>
}
else
{
    <p>ライブ情報はまだ登録されていません。</p>
}
